<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.tarea.Controller.RegisterController"
            fitToWidth="true"
            style="-fx-background-color: #f0f0f0;">

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #f0f0f0;">

        <padding>
            <Insets top="30" right="50" bottom="30" left="50"/>
        </padding>

        <!-- Título -->
        <Label text="Registro de Usuario" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

        <!-- Panel de formulario -->
        <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">

            <!-- Nombre Completo -->
            <VBox spacing="5">
                <Label text="Nombre Completo:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                <TextField fx:id="nombreCompletoField" promptText="Ej: Juan Pérez García"
                           style="-fx-font-size: 14px; -fx-pref-width: 350;"/>
            </VBox>

            <!-- Fecha de Nacimiento -->
            <VBox spacing="5">
                <Label text="Fecha de Nacimiento:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                <DatePicker fx:id="fechaNacimientoPicker" promptText="Selecciona tu fecha de nacimiento"
                            style="-fx-font-size: 14px; -fx-pref-width: 350;"/>
            </VBox>

            <!-- Username -->
            <VBox spacing="5">
                <Label text="Nombre de Usuario:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                <TextField fx:id="usernameField" promptText="Ej: juanperez123"
                           style="-fx-font-size: 14px; -fx-pref-width: 350;"/>
            </VBox>

            <!-- Correo -->
            <VBox spacing="5">
                <Label text="Correo Electrónico:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                <TextField fx:id="correoField" promptText="Ej: juan@ejemplo.com"
                           style="-fx-font-size: 14px; -fx-pref-width: 350;"/>
            </VBox>

            <!-- Contraseña -->
            <VBox spacing="5">
                <Label text="Contraseña:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                <PasswordField fx:id="passwordField" promptText="Mínimo 8 caracteres"
                               style="-fx-font-size: 14px; -fx-pref-width: 350;"/>
                <Label text="Debe contener: mayúsculas, minúsculas, números y caracteres especiales"
                       style="-fx-font-size: 11px; -fx-text-fill: #777777;"/>
            </VBox>

            <!-- Confirmar Contraseña -->
            <VBox spacing="5">
                <Label text="Confirmar Contraseña:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
                <PasswordField fx:id="confirmPasswordField" promptText="Repite tu contraseña"
                               style="-fx-font-size: 14px; -fx-pref-width: 350;"/>
            </VBox>

            <!-- Mensaje de error -->
            <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" wrapText="true"/>

            <!-- Mensaje de éxito -->
            <Label fx:id="successLabel" style="-fx-text-fill: green; -fx-font-size: 12px;" wrapText="true"/>

            <!-- Botones -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="registerButton" text="Registrarse" onAction="#handleRegister"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
                <Button fx:id="backButton" text="Volver al Login" onAction="#handleBackToLogin"
                        style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            </HBox>
        </VBox>

    </VBox>

</ScrollPane>