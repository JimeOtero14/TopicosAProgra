<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.tarea.Controller.LoginController"
      alignment="CENTER"
      spacing="20"
      style="-fx-background-color: #f0f0f0;">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>

    <!-- Título -->
    <Label text="Iniciar Sesión" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>

    <!-- Panel de formulario -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 30;">

        <!-- Username o Email -->
        <VBox spacing="5">
            <Label text="Usuario o Correo:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
            <TextField fx:id="usernameField" promptText="Ingresa tu usuario o correo"
                       style="-fx-font-size: 14px; -fx-pref-width: 300;"/>
        </VBox>

        <!-- Contraseña -->
        <VBox spacing="5">
            <Label text="Contraseña:" style="-fx-font-size: 14px; -fx-text-fill: #555555;"/>
            <PasswordField fx:id="passwordField" promptText="Ingresa tu contraseña"
                           style="-fx-font-size: 14px; -fx-pref-width: 300;"/>
        </VBox>

        <!-- Mensaje de error -->
        <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 12px;" wrapText="true"/>

        <!-- Botones -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="loginButton" text="Iniciar Sesión" onAction="#handleLogin"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
            <Button fx:id="registerButton" text="Registrarse" onAction="#handleGoToRegister"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 5;"/>
        </HBox>
    </VBox>

</VBox>